<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<GridPane alignment="center" hgap="10" prefHeight="700.0" prefWidth="440.0" vgap="10" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
   <columnConstraints>
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
   </rowConstraints>
   <children>
      <VBox prefHeight="678.0" prefWidth="425.0">
         <children>
            <Label alignment="CENTER" prefHeight="33.0" prefWidth="435.0" text="Input">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <TextArea fx:id="inputArea" prefHeight="200.0" prefWidth="324.0" />
            <Button fx:id="sendButton" alignment="CENTER" mnemonicParsing="false" onAction="#send" prefHeight="31.0" prefWidth="431.0" text="Send">
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
            </Button>
            <Separator prefHeight="29.0" prefWidth="425.0" />
            <Label alignment="CENTER" prefHeight="27.0" prefWidth="433.0" text="Output" textAlignment="CENTER">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <TextArea fx:id="outputArea" editable="false" prefHeight="200.0" prefWidth="324.0" />
            <Separator prefHeight="32.0" prefWidth="425.0" />
            <Label alignment="CENTER" prefHeight="27.0" prefWidth="426.0" text="Debug">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <TextArea fx:id="debugArea" editable="false" prefHeight="200.0" prefWidth="324.0" />
         </children>
      </VBox>
   </children>
</GridPane>
