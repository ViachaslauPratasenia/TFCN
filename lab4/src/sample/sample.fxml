      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
   </rowConstraints>
   <children>
      <HBox prefHeight="500.0" prefWidth="800.0">
         <children>
            <VBox prefHeight="500.0" prefWidth="260.0">
               <children>
                  <Label alignment="CENTER" prefHeight="21.0" prefWidth="257.0" text="Input">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Label>
                  <TextArea fx:id="inputArea" prefHeight="282.0" prefWidth="256.0" />
                  <Button fx:id="sendButton" mnemonicParsing="false" onAction="#send" prefHeight="23.0" prefWidth="256.0" text="Send">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Button>
               </children></VBox>
            <Separator orientation="VERTICAL" prefHeight="200.0" prefWidth="20.0" />
            <VBox prefHeight="500.0" prefWidth="260.0">
               <children>
                  <Label alignment="CENTER" prefHeight="21.0" prefWidth="307.0" text="Output">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Label>
                  <TextArea fx:id="outputArea" prefHeight="319.0" prefWidth="256.0" />
               </children></VBox>
            <Separator orientation="VERTICAL" prefHeight="200.0" prefWidth="20.0" />
            <VBox prefHeight="200.0" prefWidth="260.0">
               <children>
                  <Label alignment="CENTER" prefHeight="21.0" prefWidth="303.0" text="Debug">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Label>
                  <TextArea fx:id="debugArea" prefHeight="319.0" prefWidth="256.0" />
               </children></VBox>
         </children></HBox>
   </children>
</GridPane>
